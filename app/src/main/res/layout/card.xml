<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:contentDescription="TODO"
            />

        <TextView
            android:id="@+id/name_ads"
            android:layout_width="150dp"
            android:layout_marginTop="15dp"
            android:text="Заголовок"
            android:layout_marginStart="220dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cost_ads"
            android:text="Цена"
            android:layout_width="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="220dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/color_ads"
            android:text="Цвет авто"
            android:layout_width="150dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="220dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/year_ads"
            android:text="Год выпуска"
            android:layout_width="150dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="220dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/city_ads"
            android:text="Город "
            android:layout_width="150dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="220dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date_ads"
            android:text="Дата публикации"
            android:layout_width="150dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="220dp"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>