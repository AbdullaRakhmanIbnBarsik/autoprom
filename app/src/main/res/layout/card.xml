<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="20dp"
        app:contentPaddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/image_ads"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/name_ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="15dp"
            android:text="Заголовок" />

        <TextView
            android:id="@+id/cost_ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:text="Цена" />

        <TextView
            android:id="@+id/color_ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="65dp"
            android:text="Цвет авто" />

        <TextView
            android:id="@+id/year_ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="90dp"
            android:text="Год выпуска" />

        <TextView
            android:id="@+id/city_ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="130dp"
            android:text="Город " />

        <TextView
            android:id="@+id/date_ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="150dp"
            android:text="Дата публикации" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>